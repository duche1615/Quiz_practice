        console.log("Subject ID:", subjectId);
        console.log("Quiz ID:", quizId);

        // Ví dụ: Điều hướng đến URL khác dựa trên dữ liệu
        window.location.href = `/Quizs/Result?subjectId=${subjectId}&quizId=${quizId}`;
    }
</script>