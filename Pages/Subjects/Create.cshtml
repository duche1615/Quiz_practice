@page
@model Quizpractice.Pages.Subjects.CreateModel

@{
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Subject</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" name="Id" asp-for="Subject.SubjectId" />
            <div class="form-group">
                <label asp-for="Subject.SubjectName" class="control-label"></label>
                <input asp-for="Subject.SubjectName" required maxlength="255" name="SubjectName" class="form-control" />
                <span asp-validation-for="Subject.SubjectName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Status" class="control-label"></label>
                <select asp-for="Subject.Status" name="Status" class="form-control">
                    <option value="true">Active</option>
                    <option value="false">Deactive</option>
                </select>
                <span asp-validation-for="Subject.Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Title" class="control-label"></label>
                <input asp-for="Subject.Title" required maxlength="255" name="Title" class="form-control" />
                <span asp-validation-for="Subject.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Thumbnail" class="control-label"></label>
                <input asp-for="Subject.Thumbnail" name="Thumbnail" class="form-control" />
                <span asp-validation-for="Subject.Thumbnail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Subject.Description" class="control-label"></label>
                <textarea asp-for="Subject.Description" name="Description" class="form-control"></textarea>
                <span asp-validation-for="Subject.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
