@page
@model Quizpractice.Pages.Subjects.DetailsModel

@{
    Layout = "~/Pages/Shared/_Layout_Admin.cshtml";
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Subject</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.SubjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.SubjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Status)
        </dt>
        <dd class="col-sm-10">
            @(Model.Subject.Status == true ? "Active" : "Inactive")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Thumbnail)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.Subject.Thumbnail"></img>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Subject.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Subject.Description)
        </dd>
    </dl>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Chapters[0].ChapterName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapters[0].Content)
            </th>
            <th>
                <a>Status</a>
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapters[0].Public)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Chapters[0].Description)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Chapters)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ChapterName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Content)
                </td>
                <td>
                    @(item.Active == true ? "Active" : "Inactive")
                </td>
                <td>
                    @(item.Public == true ? "Public" : "Private")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td>
                    <a class="btn btn-warning btn-sm" asp-page="../Chapters/Edit" asp-route-id="@item.ChapterId"><i class="bi bi-pencil"></i></a> 
                    <a class="btn btn-info btn-sm" asp-page="../Chapters/Details" asp-route-id="@item.ChapterId"><i class="bi bi-info-circle"></i></a>
                    @*<a class="btn btn-danger btn-sm" asp-page="../Chapters/Delete" asp-route-id="@item.Content"> <i class="bi bi-toggle-on"></i></a> *@
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.Subject?.SubjectId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
