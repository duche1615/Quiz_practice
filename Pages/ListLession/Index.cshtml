@page
@model Quizpractice.Pages.ListLession.IndexModel

@{
    Layout = "~/Pages/Shared/_Layout_Learner.cshtml";

}
<div class="container">
    <h2 class="mt-3">Lession List</h2>
    <div class="card">
        <div class="card-body">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Subject</th>
                        <th>Chapter</th>
                        <th>Status</th>
                        <th>Public</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var lession in Model.Lessions)
                    {
                        <tr>
                            <td>@lession.Title</td>
                            <td>@lession.Sub?.SubjectName</td>
                            <td>@lession.Chapter?.ChapterName</td>
                            <td>@(lession.Status == true ? "Active" : "Inactive")</td>
                            <td>@(lession.Public == true ? "Yes" : "No")</td>
                            <td>
                                <a class="btn btn-info btn-sm" href="./Details?id=@lession.LessionId">Details</a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
