@page
@model Quizpractice.Pages.Users.EditProfileModel
@{
    Layout = Model.Layout;
}

<h2 class="text-center mb-4">Edit Profile</h2>
<div class="container">
    <div class="card shadow-lg p-4">
        <form method="post">
            <div class="form-group mb-3">
                <label asp-for="EditProfile.Fullname" class="form-label"></label>
                <input asp-for="EditProfile.Fullname" class="form-control" />
                <span asp-validation-for="EditProfile.Fullname" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EditProfile.Phone" class="form-label"></label>
                <input asp-for="EditProfile.Phone" class="form-control" />
                <span asp-validation-for="EditProfile.Phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EditProfile.Address" class="form-label"></label>
                <input asp-for="EditProfile.Address" class="form-control" />
                <span asp-validation-for="EditProfile.Address" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EditProfile.Gender" class="form-label"></label><br />
                <label class="form-check-label me-2">
                    <input asp-for="EditProfile.Gender" type="radio" value="true" /> Male
                </label>
                <label class="form-check-label">
                    <input asp-for="EditProfile.Gender" type="radio" value="false" /> Female
                </label>
                <span asp-validation-for="EditProfile.Gender" class="text-danger"></span>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update Profile</button>
                <a href="/Users/Profile" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </form>
    </div>
</div>
