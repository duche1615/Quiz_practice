@page
@model Quizpractice.Pages.Users.EditProfileModel
@{
    Layout = Model.Layout;
}

<h2 class="text-center mb-4">Edit Profile</h2>

<div class="container">
    @if (Model.Users != null)
    {
        <div class="card shadow-lg p-4">
            <form method="post">
                <div class="form-group mb-3">
                    <label for="Fullname" class="form-label">Full Name</label>
                    <input type="text" id="Fullname" name="Fullname" class="form-control" value="@Model.Users.Fullname" required />
                </div>

                <div class="form-group mb-3">
                    <label for="Phone" class="form-label">Phone</label>
                    <input type="text" id="Phone" name="Phone" class="form-control" value="@Model.Users.Phone" />
                </div>

                <div class="form-group mb-3">
                    <label for="Address" class="form-label">Address</label>
                    <input type="text" id="Address" name="Address" class="form-control" value="@Model.Users.Address" />
                </div>

                <div class="form-group mb-3">
                    <label for="Gender" class="form-label">Gender</label><br />
                    <label class="form-check-label me-2">
                        <input type="radio" name="Gender" value="true" @(Model.Users.Gender == true ? "checked" : "") /> Male
                    </label>
                    <label class="form-check-label">
                        <input type="radio" name="Gender" value="false" @(Model.Users.Gender == false ? "checked" : "") /> Female
                    </label>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Update Profile</button>
                    <a href="/Users/Profile" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </form>
        </div>
    }
    else
    {
        <p class="text-center text-danger">No user details available.</p>
    }
</div>
