@page
@model Quizpractice.Pages.PricePackages.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PricePackage[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePackage[0].AcessDuration)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePackage[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePackage[0].Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PricePackage[0].Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.PricePackage)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AcessDuration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @(item.Status == false ? "Deactivate" : "Activate")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.PriceId">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.PriceId">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.PriceId">Delete</a> |
                    <a href="/LessonList?packageId=@item.PriceId">Lesson</a>
                </td>
            </tr>
        }
    </tbody>
</table>
