<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Admin Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    @* <link rel="stylesheet" href="~/css/site.css" /> *@
    <style>
        /* Additional custom styles for a cleaner sidebar */
        .sidebar {
            background-color: #343a40;
            color: white;
            min-height: 100vh;
        }

            .sidebar .nav-link {
                color: #ddd;
            }

                .sidebar .nav-link:hover {
                    color: #fff;
                    background-color: #495057;
                }

            .sidebar .nav-item.active .nav-link {
                color: #fff;
                background-color: #007bff;
            }

            .sidebar h4, .sidebar h5 {
                color: #fff;
            }

        .main-content {
            padding: 20px;
        }

        .logout-link {
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2 sidebar">
                <div class="position-sticky pt-3">
                    <h4 class="text-center mb-4">Admin</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <h5 class="text-center mb-3">Dashboard</h5>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Index">
                                <i class="bi bi-file-earmark-text me-2"></i> User
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Subjects/Index">
                                <i class="bi bi-puzzle me-2"></i> Subject
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Chapters/Index">
                                <i class="bi bi-puzzle me-2"></i> Chapter
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Lessions/Index">
                                <i class="bi bi-puzzle me-2"></i> Lession
                            </a>
                        </li><li class="nav-item">
                            <a class="nav-link" href="/Quizzes/Index">
                                <i class="bi bi-puzzle me-2"></i> Quizzes
                            </a>
                        </li>


                        <li class="nav-item">
                            <a class="nav-link" href="/Users/Profile">
                                <i class="bi bi-person-circle me-2"></i> Profile
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link logout-link" href="/Users/Logout">
                                <i class="bi bi-box-arrow-right me-2"></i> Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9 main-content">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Bootstrap Icons CDN -->
    @RenderSection("Scripts", required: false)
    <script src="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.js"></script>
</body>
</html>
