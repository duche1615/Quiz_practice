<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />    
    <title>@ViewData["Title"] - Teacher Dashboard</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <!-- Sidebar -->
            <nav class="col-md-2">
                <div class="position-sticky pt-3">
                    <h4 class="text-center">Teacher</h4>
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <h5>
                                Dashboard
                            </h5>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Teacher/Questions/Index">
                                Questions
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Teacher/Quizzes/Index">
                                Quizzes
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/Teacher/Exam/Index">
                                Exams
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-danger" href="/Users/Logout">
                                Logout
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>

            <!-- Main Content -->
            <main class="col-md-9">
                @RenderBody()
            </main>
        </div>
    </div>
</body>
</html>
