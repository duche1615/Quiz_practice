@page
@model Quizpractice.Pages.Chapters.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Chapter</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chapter.ChapterName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.ChapterName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chapter.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chapter.Active)
        </dt>
        <dd class="col-sm-10">
            @(Model.Chapter.Active.Value ? "Active" : "Deactive")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chapter.Public)
        </dt>
        <dd class="col-sm-10">
            @(Model.Chapter.Public==true ? "Public" : "Private")
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Chapter.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Chapter.Description)
        </dd>
        <dt class="col-sm-2">
            <a>Subject</a>
        </dt>
        <dd class="col-sm-10">
            @(Model.Subjects.First(s=>s.SubjectId==Model.Chapter.SubId).SubjectName)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Chapter?.ChapterId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
