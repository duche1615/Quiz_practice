@page
@model Quizpractice.Pages.Questions.IndexModel

@{
    Layout = "~/Pages/Shared/_Layout_Teacher.cshtml";
}
<h1>Question List</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Stt</th>
            <th>Content</th>
            <th>Level</th>
            <th>Multiple Choice</th>
            <th>Status</th>
            <th>Subject</th>
            <th>Lesson</th>
            <th>Topic</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var question in Model.Questions)
        {
            <tr>
                <td>@question.Id</td>
                <td>@question.Content</td>
                <td>@question.Level</td>
                <td>@(question.IsMultipleChoice ? "Yes" : "No")</td>
                <td>@(question.Status)</td>
                <td>@question.SubjectName</td>
                <td>@question.LessonName</td>
                <td>@question.TopicName</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-page="Details" asp-route-id="@question.Id">Details</a>
                    <a class="btn btn-info btn-sm">Edit</a>
                    <a class="btn btn-info btn-sm">ChangeStatus</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div>
    <nav>
        <ul class="pagination">
            <!-- Nút Previous -->
            @if (Model.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Index" asp-route-currentPage="@((Model.CurrentPage - 1))">Previous</a>
                </li>
            }

            <!-- Các số trang -->
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.CurrentPage ? "active" : "")">
                    <a class="page-link" asp-page="./Index" asp-route-currentPage="@i">@i</a>
                </li>
            }

            <!-- Nút Next -->
            @if (Model.CurrentPage < Model.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link" asp-page="./Index" asp-route-currentPage="@((Model.CurrentPage + 1))">Next</a>
                </li>
            }
        </ul>
    </nav>
</div>

